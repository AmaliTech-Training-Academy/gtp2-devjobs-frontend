<?xml version="1.0" encoding="UTF-8"?>
<suite name="DevJobs Test Suite" parallel="methods" thread-count="3">

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.devjobs.tests.LandingPageTest"/>
            <class name="com.devjobs.tests.LoginTest"/>
            <class name="com.devjobs.tests.SignUpTest"/>
        </classes>
    </test>

    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.devjobs.tests.LandingPageTest"/>
            <class name="com.devjobs.tests.LoginTest"/>
            <class name="com.devjobs.tests.SignUpTest"/>
        </classes>
    </test>

</suite>